<main class="">
    <hr>
    <form class="needs-validation" autocomplete="off" novalidate method="POST" action="/edit-profile" enctype="multipart/form-data">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Nombre: </label>
            <div class="col-sm-10">
                <input value="{{user.name}}" type="text" name="name" class="form-control"
                    placeholder="Ej. Juan Rodriguez" required>
                <div class="invalid-feedback">
                    El nombre es obligatorio.
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">E-mail: </label>
            <div class="col-sm-10">
                <input value="{{user.email}}" type="email" name="email" class="form-control"
                    placeholder="Ej. correo@correo.com" required>
                <div class="invalid-feedback">
                    El email no es valido.
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Contraseña: </label>
            <div class="col-sm-10">
                <input type="password" name="password" class="form-control"
                    placeholder="Tu contraseña (solo si quieres cambiarla)">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"><img src="{{user.image}}" alt="img" class="img"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input name="avatar" type="file" class="custom-file-input" id="customFileLang" lang="es">
                    <label class="custom-file-label" for="customFileLang" data-browse="Elegir">Seleccionar
                        Imagen</label>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="/login">Iniciar Sesión</a>
            <input type="submit" value="Guardar cambios" class="btn btn-info">
        </div>
    </form>
</main>