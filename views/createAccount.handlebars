<main class="">
  <hr>
  <form class="needs-validation" autocomplete="off" novalidate method="POST" action="/create-account">
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Nombre: </label>
      <div class="col-sm-10">
        <input type="text" name="name" class="form-control" placeholder="Ej. Juan Rodriguez" required>
        <div class="invalid-feedback">
          El nombre es obligatorio.
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">E-mail: </label>
      <div class="col-sm-10">
        <input type="email" name="email" class="form-control" placeholder="Ej. correo@correo.com" required>
        <div class="invalid-feedback">
          El email no es valido.
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Contraseña: </label>
      <div class="col-sm-10">
        <input type="password" name="password" class="form-control" placeholder="Tu contraseña" required>
        <div class="invalid-feedback">
          La contraseña es obligatoria.
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Confirmar contraseña: </label>
      <div class="col-sm-10">
        <input type="password" name="confirm" class="form-control" placeholder="Confirma tu contraseña" required>
        <div class="invalid-feedback">
          Confirma tu contraseña.
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-between">
      <a href="/login">Iniciar Sesión</a>
      <input type="submit" value="Crear cuenta" class="btn btn-info">
    </div>
  </form>
</main>