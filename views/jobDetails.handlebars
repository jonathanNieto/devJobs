<div class="jumbotron">
    <h1 class="display-3">{{job.title}}</h1>
    <table class="table table-hover table-responsive">
        <thead>
            <tr class="table-dark">
                <th scope="col">Empresa</th>
                <th scope="col">Ubicación</th>
                <th scope="col">Tipo de empleo</th>
                <th scope="col">Salario</th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-active">
                <th>{{job.company}}</th>
                <td>{{job.location}}</td>
                <td>{{job.contract}}</td>
                <td>{{job.salary}}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-12 col-md-6">
            <h3>Descripción del puesto</h3>
            <div id="description">
                {{{job.description}}}
            </div>
        </div>
        <div class="col-12 col-md-6">
            <h3>Conocimientos requeridos:</h3>
            <ul class="list mx-3">
                {{#each job.skills}}
                <li>
                    <h5>{{this}}, &nbsp;&nbsp;&nbsp;</h5>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row justify-content-between align-items-center">
        {{#if admin}}
        <a href="/jobs/edit/{{job.url}}" class="btn btn-secondary mt-3">Editar</a>
        {{/if}}
        {{#if job.userId.name}}
        <div class="card bg-light mb-3 mt-2" style="max-width: 18rem;">
            <div class="card-header">Publicado por: {{job.userId.name}}</div>
            <div class="card-body text-center">
                <img src="/uploads/profiles/{{job.userId.image}}" alt="" class="img">
            </div>
        </div>
        {{/if}}
    </div>
    <div class="row">
        <div class="col-12">
            <h2>Contactar al reclutador</h2>
            <p>Llena el formulario, sube tu curriculum y pronto te contactaremos</p>
        </div>

        <div class="col-12">
            <form class="needs-validation" autocomplete="off" novalidate method="POST" action="/jobs/{{job.url}}"
                enctype="multipart/form-data">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Nombre: </label>
                    <div class="col-sm-10">
                        <input type="text" name="name" class="form-control" placeholder="Ej. Juan Rodriguez" required>
                        <div class="invalid-feedback">
                            El nombre es obligatorio.
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">E-mail: </label>
                    <div class="col-sm-10">
                        <input type="email" name="email" class="form-control" placeholder="Ej. correo@correo.com"
                            required>
                        <div class="invalid-feedback">
                            El email no es valido.
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Curriculum: </label>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <input accept="application/pdf" name="curriculum" type="file" class="custom-file-input" id="customFileLang" lang="es">
                            <label class="custom-file-label" for="customFileLang" data-browse="Elegir">Seleccionar
                                Archivo</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Enviar" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>